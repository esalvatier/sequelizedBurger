<h1 class="text-center">Eat-Da-Burger!</h1>
<img class="mx-auto d-block" src="/assets/img/burger.png" alt="burger image" height="300px">

<hr>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="container border border-dark rounded">
        <h2 class="text-center">Burgers to be devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-md-6">
      <div class="container border border-dark rounded">
        <h2 class="text-center">Burgers that have been devoured!</h2>

        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-eaten-block devoured=true}}
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<hr>

<div class="container border border-dark rounded">
  <h2 class="text-center">Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>
    <button class="btn btn-dark" type="submit">Add Burger</button>
  </form>
  <br>
</div>
<br>